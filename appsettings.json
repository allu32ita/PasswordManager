{
  "ConnectionStrings": {
    "Default": "Data Source=Data/dbPassword.db"
  },
  "DistributedCache":  {
    "Redis": {
      "Configuration": "localhost",
      "IstanceName": "PasswordManagerRedisCache"
    },
    "SqlServer": {
      "ConnectionString": "Data Source=(localdb)\\MSSQLLocalDb;Integrate Security=True",
      "SchemaName": "dbo",
      "TableName": "PasswordManagerCache"
    }
  },
  "ResponseCache": {
    "Home": {
      "Duration": 60,
      "Location": "Any",
      "VaryByQueryKeys": ["page"]
    }
  },
  "Passwords": {
    "PerPage": 10,
    "Order": {
      "By": "Id",
      "Ascending": true,
      "Allow": ["Id", "Descrizione", "Tipo"]
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "MemoryCache":{
    "SizeLimit": 1000
  },
  "AllowedHosts": "*"
}
