@model PasswordListViewModel

<div class="row">
    <div class="col-md-8">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-md-4 d-flex align-items-center">
        <form asp-controller="Password" asp-action="index" method="get">
            <div class="input-group">
                <input type="text" name="search" placeholder="Cerca..." value="@Model.Input.Search">
                <div class="input-group-append">
                    <button class="input-group-text">Ricerca</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-1">
        <a asp-route-orderby="Id" asp-route-ascending="@(Model.Input.Orderby == "Id" ? !Model.Input.Ascending : true)" asp-route-search="@Model.Input.Search">Id @if(Model.Input.Orderby == "Id") { if(Model.Input.Ascending == true) { <h6>v</h6> }else{ <h6>^</h6> } }</a>    
    </div>
    <div class="col-md-4">
        <a asp-route-orderby="Descrizione" asp-route-ascending="@(Model.Input.Orderby == "Descrizione" ? !Model.Input.Ascending : true)" asp-route-search="@Model.Input.Search">Descrizione @if(Model.Input.Orderby == "Descrizione") { if(Model.Input.Ascending == true) { <h6>v</h6> }else{ <h6>^</h6> } }</a>       
    </div>
    <div class="col-md-4">
        <a asp-route-orderby="Sito" asp-route-ascending="@(Model.Input.Orderby == "Sito" ? !Model.Input.Ascending : true)" asp-route-search="@Model.Input.Search">Sito @if(Model.Input.Orderby == "Sito") { if(Model.Input.Ascending == true) { <h6>v</h6> }else{ <h6>^</h6> } }</a>        
    </div>
    <div class="col-md-3" d-flex align-item-center>    
    </div>    
</div>

@foreach(PasswordViewModel pass in Model.Passwords)
{
<hr>
<div class="row">
    <div class="col-md-1">
        @pass.id
    </div>
    <div class="col-md-4">
        @pass.descrizione
    </div>
    <div class="col-md-4">
        @pass.sito
    </div>
    <div class="col-md-3" d-flex align-item-center>
        <a class="btn btn-outline-primary" asp-action="detail" asp-controller="Password" asp-route-id="@pass.id">Dettaglio Password</a>
    </div>
</div>
}

<<nav aria-label="Paginazione">
    <ul class="pagination d-flex justify-content-center mt-3">
        <li class="page-item active" aria-current="page">
            <a class="page-link" asp-route-page="1">Page 1 <span class="sr-only">(current)</span></a>
        </li>
        <li class="page-item">
            <a class="page-link" asp-route-page="2">Page 2</a>
        </li>
        <li class="page-item">
            <a class="page-link" asp-route-page="3">Page 3</a>
        </li>
    </ul>
</nav>